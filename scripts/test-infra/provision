#!/usr/bin/env bash

# This script is used to provision the Dkron testing infrastructure under Packet hosting
# This uses docker-machine for bootstrapping the infra using the docker-machine-packet-driver
# https://github.com/packethost/docker-machine-driver-packet
# Set PACKET_API_TOKEN env var before provisioning

# Provision the manager
# docker-machine rm manager1
docker-machine create -d packet --packet-project-id=904af849-79ff-4847-90f7-dfa02367ae72 --packet-os=ubuntu_16_04 --packet-plan=baremetal_0 --packet-facility-code=ams1 --swarm --swarm-master manager1

# Provision several workers
for i in {1..2}
do
    # docker-machine rm $i
    docker-machine create -d packet --packet-project-id=904af849-79ff-4847-90f7-dfa02367ae72 --packet-os=ubuntu_16_04 --packet-plan=baremetal_0 --packet-facility-code=ams1 --swarm worker$i &
done

#docker swarm join \
