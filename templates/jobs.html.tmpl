{{define "content"}}
<div class="container" ng-controller="JobListCtrl">
  <div class="row">
  </div>

      <table class="table table-striped">
	<tr>
	  <th>Job</th>
	  <th>Success count</th>
	  <th>Error count</th>
	  <th>Last</th>
	  <th>Actions</th>
	</tr>
        {{ range $job := .Jobs }}
        <tr>
	  <td><a href="/dashboard/jobs/{{$job.Name}}/executions">{{ $job.Name }}</a></td>
	  <td>{{ $job.SuccessCount }}</td>
	  <td>{{ $job.ErrorCount }}</td>
	  <td>{{if isSuccess $job}}Success{{else}}Failed{{end}}</td>
	  <td><button ng-click="click('{{ $job.Name }}')">Click me</button><form method="post" action="/jobs/{{ $job.Name }}"><input name="run" value="Run" type="submit"/></form></td>
	</tr>
	{{ end }}
      </table>
</div>
{{end}}
